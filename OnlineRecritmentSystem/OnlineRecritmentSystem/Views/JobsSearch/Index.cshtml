@model IEnumerable<OnlineRecritmentSystem.Models.Job>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm())
{

    <h3>
        <select class="form-control" id="exampleFormControlSelect1">
            <option value="Designation">Company</option>
            <option value="Experience">Skill</option>
            <option value="Profession">id</option>
           
        </select>
        <input type="text" name="Company" placeholder="Company" />
        <input type="text" name="skill" placeholder="Skill"/>
        <input type="text" name="id"  placeholder="id"/>
        

        <input type="submit" value="Search" class="btn btn-info" />
    </h3>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Company)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ComapnyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ComapnyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Jobid }) |
                @Html.ActionLink("Details", "Details", new { id = item.Jobid }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Jobid })
            </td>
        </tr>
    }

</table>
