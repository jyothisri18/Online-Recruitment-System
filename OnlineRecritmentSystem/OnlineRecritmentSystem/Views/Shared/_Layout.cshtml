<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Recruitment System</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar-right">
        @if (Session["UserID"] != null)
        {
            @Html.ActionLink("Login","LogOut");
        }
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")"><img src="~/Image/DefaultPage.jpg" width="150" height="50"></a>

            </div>
            <div class="form-group">
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Search", "Search", "JobSeekers")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li align:Right>@Html.ActionLink("MainContext", "Index", "MainContextSection")</li>
                </ul>


                <ul class="nav navbar-nav navbar-right">
                    <li align:Right>@Html.ActionLink("Login", "Login", "Login")</li>

                </ul>
                @*<ul class="nav navbar-nav navbar-right">
                    <li align:Right>@Html.ActionLink("Register", "Register", "Home")</li>

                </ul>*@
                <ul class="nav navbar-nav navbar-right">
                    <li align:Right>@Html.ActionLink("EmployeerLogin", "EmployeerLogin", "EmployeerLogin")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li align:Right>@Html.ActionLink("JobSeakerLogin", "JobSeakerLogin", "JobSeakerLogin")</li>

                </ul>
            </div>

        </div>
    </div>

    <div class="container body-content">
        @RenderSection("Scripts", required: false)
        @RenderBody()
        <hr />
        <footer>
            <p>© @DateTime.Now.Year -HeaderSection</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>